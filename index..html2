<body >
    <!--header-->
    <header>
        <h1>Transaction Procedure</h1>
    </header>
    <!--main-->
    <main>
        <form method="post" action=".http//:server1">
            <div class="form">
                <h4> Fullname:</h4>
                <input type="text" name="f name"><br>
            </div>
            <div class="form">
                <h3>Email:</h3>
                <input type="email" name="email" placeholder="you@example.com">
            </div>
            <div class="form">
                <h4>Contact</h4>
                <input type="tel" name="Contact" value="+234:">
            </div>
            <div class="card">
                <h4>Card details</h4>
                <p>Choose your Bank :</p>
                <select>
                    <option disabled selected value="">
                        Select answer
                    </option>
            
                    <option>
                        <option value="Bank1">Access Bank</option>
                        <option value="Bank2">Union Bank</option>
                        <option value="Bank3">Zenith Bank</option>
                        <option value="Bank4">UBA</option>
                        <option value="Bank5">First Bank</option>
                        <option value="Bank6">Fidelity Bank</option>
                      </select>
                      <p>Card valid date</p>
